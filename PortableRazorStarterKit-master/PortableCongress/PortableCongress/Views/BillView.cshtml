@inherits PortableRazor.ViewBase
@model PortableCongress.Bill
<!DOCTYPE html>
<html>
<head>
	<meta content="text/html; charset=utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<link rel="stylesheet" href="jquery.mobile-1.4.0.min.css" />
	<script src="jquery-1.10.2.min.js"></script>
	<script src="jquery.mobile-1.4.0.min.js"></script>
</head>
<body>
	<style>
		iframe {
		    min-width: 100%; 
		    width: 100px;
		    *width: 100%; 
		}
	</style>
	<div data-role="header" style="overflow:hidden;" data-position="fixed">
    	<h1>Bill Details</h1>
    </div>

    <div data-role="header" style="overflow:hidden;" data-position="fixed">
		@Html.ActionLink("Back", "ShowRecentVotes", new {id = @Model.PoliticianId}, new { 
			@class="ui-btn-left ui-btn ui-icon-back ui-btn-icon-notext ui-shadow ui-corner-all",
			data_icon = "arrow-l", 
			data_role="button", 
			data_mini="true", 
			data_inline="true", 
			data_transition="slide"})
    	<h1>Bill Details</h1>
    	@Html.ActionLink("Save", "AddFavoriteBill", new {id = @Model.Id}, new { 
			@class="ui-btn-right ui-btn ui-btn-icon-notext ui-shadow ui-corner-all",
			data_role="button", 
			data_mini="true", 
			data_inline="true"})
    </div>	
		
    <div style="margin-left:10px" data-mini="true" data-inset="false">
		<p>@Model.Title</p>
	</div>

	<iframe scrolling="no" src="@Model.ThomasLink"></iframe>
</body>
</html>