@inherits PortableRazor.ViewBase
@model System.Collections.Generic.List<Bill>
<!DOCTYPE html>
<html>
<head>
	<meta content="text/html; charset=utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<link rel="stylesheet" href="jquery.mobile-1.4.0.min.css" />
	<script src="jquery-1.10.2.min.js"></script>
	<script src="jquery.mobile-1.4.0.min.js"></script>
</head>
<body>
	<div data-role="header" style="overflow:hidden;" data-position="fixed">
    	<h1>Favorite Bills</h1>
    </div>

	<ul data-role="listview" data-inset="true">
		@foreach(var bill in Model) {
			<li>
	    		<a href="@Url.Action("ShowFavoriteBillView", new {id = bill.Id })">@bill.Title</a>
		    </li>
	    }
	</ul>
	<div data-role="footer" data-id="foo1" data-position="fixed">
		<div data-role="navbar">
			<ul>
				<li><a href="@Url.Action("ShowPoliticianList")">Politicians</a></li>
				<li><a href="@Url.Action("ShowFavoriteBills")">Bills</a></li>
			</ul>
		</div>
	</div>
</body>
</html>